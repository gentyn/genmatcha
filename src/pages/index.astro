---
import Layout from '../layouts/Layout.astro';
import ProjectModal from '../components/ProjectModal.astro';
---

<Layout title="Genesis Tyndall" theme="portfolio">
	<!-- Add Pageclip stylesheet to head -->
	<link rel="stylesheet" href="https://s.pageclip.co/v1/pageclip.css" media="screen">
	
	<!-- Hero Section -->
	<section id="home" class="min-h-screen flex items-center justify-center">
		<div class="container mx-auto px-4 py-16">
			<div class="text-center">
				<div class="mb-8">
					<img 
						src="/images/portfolio/headshot/GenHeadshot.jpg" 
						alt="Genesis Tyndall" 
						class="w-48 h-48 rounded-full object-cover mx-auto border-4 border-[#91B77F] dark:border-[#A1C28F]"
					/>
				</div>
				<h1 class="text-4xl md:text-6xl font-bold text-[#1F1F1F] dark:text-[#EDEDE6] mb-6">
					Genesis Tyndall
				</h1>
				<p class="text-xl text-[#4C4C4C] dark:text-[#B0B0A8] mb-8">
					Software Engineer specializing in embedded systems, test automation, and systems integration
				</p>
				<div class="flex justify-center gap-4">
					<a href="#projects" class="w-40 px-6 py-3 bg-[#91B77F] dark:bg-[#A1C28F] text-[#1F1F1F] rounded-lg hover:bg-[#7DA867] dark:hover:bg-[#8CAF78] transition-colors">
						View Projects
					</a>
					<a href="#contact" class="w-40 px-6 py-3 border border-[#4C4C4C] dark:border-[#B0B0A8] rounded-lg hover:bg-[#91B77F]/10 dark:hover:bg-[#A1C28F]/10 transition-colors text-[#1F1F1F] dark:text-[#EDEDE6]">
						Contact Me
					</a>
				</div>
				<!-- Social Links -->
				<div class="flex justify-center gap-4 mt-6">
					<a 
						href="https://www.linkedin.com/in/gentyn/" 
						target="_blank" 
						rel="noopener noreferrer"
						class="p-3 border border-[#4C4C4C] dark:border-[#B0B0A8] rounded-lg hover:bg-[#91B77F]/10 dark:hover:bg-[#A1C28F]/10 transition-colors text-[#1F1F1F] dark:text-[#EDEDE6]"
						aria-label="LinkedIn Profile"
					>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					</a>
					<a 
						href="https://github.com/gentyn" 
						target="_blank" 
						rel="noopener noreferrer"
						class="p-3 border border-[#4C4C4C] dark:border-[#B0B0A8] rounded-lg hover:bg-[#91B77F]/10 dark:hover:bg-[#A1C28F]/10 transition-colors text-[#1F1F1F] dark:text-[#EDEDE6]"
						aria-label="GitHub Profile"
					>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
							<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Projects Section -->
	<section id="projects" class="py-20">
		<div class="container mx-auto px-4">
			<h2 class="text-4xl font-bold text-[#1F1F1F] dark:text-[#EDEDE6] mb-8">Featured Projects</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<!-- Interactive Art Installation -->
				<div 
					class="project-card bg-[#F0F0E8] dark:bg-[#262926] rounded-lg shadow-lg overflow-hidden cursor-pointer transition-shadow relative"
					onclick="document.getElementById('modal-interactive-art').classList.remove('hidden')"
				>
					<div class="card-image-loading-skeleton absolute inset-0 bg-gray-200 dark:bg-gray-700 animate-pulse"></div>
					<img 
						src="/images/portfolio/projects/interactive_art_installation/functional_demo.jpg" 
						alt="Interactive Art Installation" 
						class="w-full h-64 object-cover relative z-10"
						loading="lazy"
						onload="this.previousElementSibling.classList.add('hidden')"
						onerror="this.previousElementSibling.classList.add('hidden')"
					/>
					<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-6 z-20">
						<div class="bg-black/60 rounded-lg p-3 backdrop-blur-sm">
							<h3 class="text-xl font-semibold text-white">Interactive Art Installation</h3>
						</div>
					</div>
				</div>

				<!-- Boeing -->
				<div 
					class="project-card bg-[#F0F0E8] dark:bg-[#262926] rounded-lg shadow-lg overflow-hidden cursor-pointer transition-shadow relative"
					onclick="document.getElementById('modal-boeing').classList.remove('hidden')"
				>
					<div class="card-image-loading-skeleton absolute inset-0 bg-gray-200 dark:bg-gray-700 animate-pulse"></div>
					<img 
						src="/images/portfolio/projects/Placeholder.jpg" 
						alt="Boeing Projects" 
						class="w-full h-64 object-cover relative z-10"
						loading="lazy"
						onload="this.previousElementSibling.classList.add('hidden')"
						onerror="this.previousElementSibling.classList.add('hidden')"
					/>
					<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-6 z-20">
						<div class="bg-black/60 rounded-lg p-3 backdrop-blur-sm">
							<h3 class="text-xl font-semibold text-white">Boeing</h3>
						</div>
					</div>
				</div>

				<!-- Makerspace -->
				<div 
					class="project-card bg-[#F0F0E8] dark:bg-[#262926] rounded-lg shadow-lg overflow-hidden cursor-pointer transition-shadow relative"
					onclick="document.getElementById('modal-makerspace').classList.remove('hidden')"
				>
					<div class="card-image-loading-skeleton absolute inset-0 bg-gray-200 dark:bg-gray-700 animate-pulse"></div>
					<img 
						src="/images/portfolio/projects/makerspace/makerspace_view_benches_and_printers.jpg" 
						alt="Makerspace" 
						class="w-full h-64 object-cover relative z-10"
						loading="lazy"
						onload="this.previousElementSibling.classList.add('hidden')"
						onerror="this.previousElementSibling.classList.add('hidden')"
					/>
					<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-6 z-20">
						<div class="bg-black/60 rounded-lg p-3 backdrop-blur-sm">
							<h3 class="text-xl font-semibold text-white">Makerspace</h3>
						</div>
					</div>
				</div>

				<!-- Art -->
				<div 
					class="project-card bg-[#F0F0E8] dark:bg-[#262926] rounded-lg shadow-lg overflow-hidden cursor-pointer transition-shadow relative"
					onclick="document.getElementById('modal-art').classList.remove('hidden')"
				>
					<div class="card-image-loading-skeleton absolute inset-0 bg-gray-200 dark:bg-gray-700 animate-pulse"></div>
					<img 
						src="/images/portfolio/projects/VisualSynth.jpg" 
						alt="Art Projects" 
						class="w-full h-64 object-cover relative z-10"
						loading="lazy"
						onload="this.previousElementSibling.classList.add('hidden')"
						onerror="this.previousElementSibling.classList.add('hidden')"
					/>
					<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-6 z-20">
						<div class="bg-black/60 rounded-lg p-3 backdrop-blur-sm">
							<h3 class="text-xl font-semibold text-white">Art</h3>
						</div>
					</div>
				</div>

				<!-- Webservers and Sites -->
				<div 
					class="project-card bg-[#F0F0E8] dark:bg-[#262926] rounded-lg shadow-lg overflow-hidden cursor-pointer transition-shadow relative"
					onclick="document.getElementById('modal-webservers').classList.remove('hidden')"
				>
					<div class="card-image-loading-skeleton absolute inset-0 bg-gray-200 dark:bg-gray-700 animate-pulse"></div>
					<img 
						src="/images/portfolio/projects/webservers/two_home_servers_in_service.jpg" 
						alt="Webservers and Sites" 
						class="w-full h-64 object-cover relative z-10"
						loading="lazy"
						onload="this.previousElementSibling.classList.add('hidden')"
						onerror="this.previousElementSibling.classList.add('hidden')"
					/>
					<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-6 z-20">
						<div class="bg-black/60 rounded-lg p-3 backdrop-blur-sm">
							<h3 class="text-xl font-semibold text-white">Webservers and Sites</h3>
						</div>
					</div>
				</div>

				<!-- DNR -->
				<div 
					class="project-card bg-[#F0F0E8] dark:bg-[#262926] rounded-lg shadow-lg overflow-hidden cursor-pointer transition-shadow relative"
					onclick="document.getElementById('modal-dnr').classList.remove('hidden')"
				>
					<div class="card-image-loading-skeleton absolute inset-0 bg-gray-200 dark:bg-gray-700 animate-pulse"></div>
					<img 
						src="/images/portfolio/projects/dnr/dnr_desk.jpg" 
						alt="DNR Work" 
						class="w-full h-64 object-cover relative z-10"
						loading="lazy"
						onload="this.previousElementSibling.classList.add('hidden')"
						onerror="this.previousElementSibling.classList.add('hidden')"
					/>
					<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-6 z-20">
						<div class="bg-black/60 rounded-lg p-3 backdrop-blur-sm">
							<h3 class="text-xl font-semibold text-white">DNR</h3>
						</div>
					</div>
				</div>

				<!-- Work at UWM -->
				<div 
					class="project-card bg-[#F0F0E8] dark:bg-[#262926] rounded-lg shadow-lg overflow-hidden cursor-pointer transition-shadow relative"
					onclick="document.getElementById('modal-uwm').classList.remove('hidden')"
				>
					<div class="card-image-loading-skeleton absolute inset-0 bg-gray-200 dark:bg-gray-700 animate-pulse"></div>
					<img 
						src="/images/portfolio/projects/Placeholder.jpg" 
						alt="Work at UWM" 
						class="w-full h-64 object-cover relative z-10"
						loading="lazy"
						onload="this.previousElementSibling.classList.add('hidden')"
						onerror="this.previousElementSibling.classList.add('hidden')"
					/>
					<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-6 z-20">
						<div class="bg-black/60 rounded-lg p-3 backdrop-blur-sm">
							<h3 class="text-xl font-semibold text-white">Work at UWM</h3>
						</div>
					</div>
				</div>

				<!-- TimeAssign Student Project -->
				<div 
					class="project-card bg-[#F0F0E8] dark:bg-[#262926] rounded-lg shadow-lg overflow-hidden cursor-pointer transition-shadow relative"
					onclick="document.getElementById('modal-timeassign').classList.remove('hidden')"
				>
					<div class="card-image-loading-skeleton absolute inset-0 bg-gray-200 dark:bg-gray-700 animate-pulse"></div>
					<img 
						src="/images/portfolio/projects/TimeAssign/uml_diagram_views.png" 
						alt="TimeAssign Student Project" 
						class="w-full h-64 object-cover relative z-10"
						loading="lazy"
						onload="this.previousElementSibling.classList.add('hidden')"
						onerror="this.previousElementSibling.classList.add('hidden')"
					/>
					<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-6 z-20">
						<div class="bg-black/60 rounded-lg p-3 backdrop-blur-sm">
							<h3 class="text-xl font-semibold text-white">TimeAssign Student Project</h3>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Project Modals -->
	<ProjectModal
		projectId="interactive-art"
		title="Interactive Art Installation"
		description="An interactive digital art installation that combines algorithmic animation with physical interface controls. This project explores the intersection of art, technology, and user interaction."
		images={[
			"/images/portfolio/projects/interactive_art_installation/functional_demo.jpg",
			"/images/portfolio/projects/interactive_art_installation/completed_unit_next_to_example_parts.jpg",
			"/images/portfolio/projects/interactive_art_installation/controls_prototype.jpg",
			"/images/portfolio/projects/interactive_art_installation/controls_components.jpg",
			"/images/portfolio/projects/interactive_art_installation/completed_controls.jpg",
			"/images/portfolio/projects/interactive_art_installation/woodworking_in_progress.jpg",
			"/images/portfolio/projects/interactive_art_installation/lvs_hardware_packaging.jpg",
			"/images/portfolio/projects/interactive_art_installation/fit_test.jpg",
			"/images/portfolio/projects/interactive_art_installation/controller_programming_in_progress.jpg",
			"/images/portfolio/projects/interactive_art_installation/cad_model.png"
		]}
		details={[
			"Developed interactive animations using P5.js",
			"Created physical interface with Raspberry Pi",
			"Implemented real-time user interaction",
			"Explored algorithmic and data structure concepts",
			"Designed modular and extensible architecture",
			"Built custom hardware controls and packaging",
			"Integrated software and hardware components"
		]}
		technologies={["JavaScript", "P5.js", "Raspberry Pi", "Interactive Art", "Hardware Design", "CAD"]}
		contentBlocks={[
			{
				type: 'text',
				content: 'This interactive art installation represents the perfect intersection of my technical skills and creative interests. It combines algorithmic animation with physical interface controls to create an engaging user experience that responds in real-time.'
			},
			{
				type: 'header',
				content: 'Technical Architecture'
			},
			{
				type: 'list',
				content: [
					'Frontend: P5.js for interactive animations',
					'Backend: Raspberry Pi for hardware control',
					'Interface: Custom physical controls and sensors',
					'Integration: Real-time communication between components'
				]
			},
			{
				type: 'image',
				title: 'Functional Demo',
				content: {
					src: '/images/portfolio/projects/interactive_art_installation/functional_demo.jpg',
					alt: 'Interactive Art Installation functional demo',
					caption: 'The completed installation in action, demonstrating real-time user interaction.'
				}
			},
			{
				type: 'text',
				content: 'The project challenged me to think about user experience from both a software and hardware perspective. Creating intuitive physical controls that seamlessly integrate with digital animations required careful consideration of both domains.'
			}
		]}
	/>

	<ProjectModal
		projectId="boeing"
		title="Boeing"
		description="Avionics test automation and requirements management work at Boeing Commercial Airplanes."
		images={[
			"/images/portfolio/projects/Placeholder.jpg"
		]}
		details={[
			"Managed 1,250+ system requirements for 777X and 787 aircraft",
			"Developed Python-based test automation scripts",
			"Integrated with IBM DOORS and RQM for requirement verification",
			"Led frontend development for internal requirements database",
			"Reduced testing time by 60% through automation",
			"Ensured compliance with DO-178C safety standards"
		]}
		technologies={["Python", "Test Automation", "IBM DOORS", "RQM", "Avionics Systems", "JavaScript", "HTML/CSS"]}
		contentBlocks={[
			{
				type: 'text',
				content: 'Working at Boeing Commercial Airplanes was an incredible opportunity to apply software engineering principles to safety-critical avionics systems. The scale and complexity of aircraft systems provided unique challenges that required both technical expertise and meticulous attention to detail.'
			},
			{
				type: 'header',
				content: 'Key Achievements'
			},
			{
				type: 'list',
				content: [
					'Managed 1,250+ system requirements for 777X and 787 aircraft',
					'Reduced testing time by 60% through automation',
					'Led frontend development for internal tools',
					'Ensured compliance with DO-178C safety standards'
				]
			},
			{
				type: 'text',
				content: 'The work required deep understanding of both software development and aviation safety standards. Every line of code and every test case had to meet the highest standards of reliability and traceability.'
			},
			{
				type: 'header',
				content: 'Technical Skills Applied'
			},
			{
				type: 'list',
				content: [
					'Python for test automation and data processing',
					'IBM DOORS and RQM for requirements management',
					'JavaScript and HTML/CSS for internal tool development',
					'Systems integration and verification processes'
				]
			}
		]}
	/>

	<ProjectModal
		projectId="makerspace"
		title="Makerspace"
		description="University makerspace management and community building at UWM."
		images={[
			"/images/portfolio/projects/makerspace/makerspace_view_benches_and_printers.jpg",
			"/images/portfolio/projects/makerspace/makerspace_computer_lab.jpg",
			"/images/portfolio/projects/makerspace/makerspace_door_decal_and_logo.jpg",
			"/images/portfolio/projects/makerspace/vinyl_sticker_cutter_and_material_storage_rack.jpg",
			"/images/portfolio/projects/makerspace/gen_soldering_keyboard.jpg",
			"/images/portfolio/projects/makerspace/university_laboratory_space.jpg",
			"/images/portfolio/projects/makerspace/proto_club_flyer.png"
		]}
		details={[
			"Managed university makerspace operations",
			"Led community building and educational programs",
			"Maintained 3D printers and fabrication equipment",
			"Created educational materials and workshops",
			"Organized Proto Club events and activities",
			"Provided technical support and training"
		]}
		technologies={["3D Printing", "Community Management", "Education", "Hardware", "Leadership"]}
		contentBlocks={[
			{
				type: 'text',
				content: 'Managing the university makerspace was about more than just maintaining equipment - it was about building a community of makers, learners, and innovators. The space became a hub for creativity and hands-on learning.'
			},
			{
				type: 'header',
				content: 'Community Impact'
			},
			{
				type: 'list',
				content: [
					'Led educational programs and workshops',
					'Organized Proto Club events and activities',
					'Provided technical support and training',
					'Created inclusive learning environment'
				]
			},
			{
				type: 'image',
				title: 'Makerspace Overview',
				content: {
					src: '/images/portfolio/projects/makerspace/makerspace_view_benches_and_printers.jpg',
					alt: 'Makerspace view of benches and printers',
					caption: 'The main makerspace area with workbenches and 3D printers ready for student projects.'
				}
			},
			{
				type: 'text',
				content: 'The most rewarding aspect was seeing students grow from complete beginners to confident makers. The space provided a safe environment for experimentation and learning from failure.'
			},
			{
				type: 'header',
				content: 'Equipment Management'
			},
			{
				type: 'list',
				content: [
					'3D printers and fabrication equipment',
					'Computer lab with design software',
					'Vinyl cutter and material storage',
					'Soldering stations and electronics tools'
				]
			}
		]}
	/>

	<ProjectModal
		projectId="art"
		title="Art"
		description="Digital art and creative coding projects exploring algorithmic and parametric design."
		images={[
			"/images/portfolio/projects/VisualSynth.jpg",
			"/images/portfolio/projects/parametric_art/2.0.2 a.png",
			"/images/portfolio/projects/parametric_art/2.0.2 b.png",
			"/images/portfolio/projects/parametric_art/1.4.0 j.png",
			"/images/portfolio/projects/parametric_art/1.4.0 i.png",
			"/images/portfolio/projects/parametric_art/1.4.0 h.png",
			"/images/portfolio/projects/parametric_art/1.4.0 d.png",
			"/images/portfolio/projects/parametric_art/44.png",
			"/images/portfolio/projects/parametric_art/10.1.0 c.png",
			"/images/portfolio/projects/parametric_art/login-static.png"
		]}
		details={[
			"Created algorithmic and parametric art pieces",
			"Developed visual synthesis and generative art",
			"Explored mathematical concepts in art",
			"Built interactive art installations",
			"Combined traditional and digital art techniques"
		]}
		technologies={["Creative Coding", "Algorithmic Art", "Digital Design", "Visual Synthesis", "Interactive Media"]}
		contentBlocks={[
			{
				type: 'text',
				content: 'My art projects explore the intersection of mathematics, programming, and visual design. Through algorithmic and parametric approaches, I create pieces that blend the precision of code with the expressiveness of art.'
			},
			{
				type: 'header',
				content: 'Creative Process'
			},
			{
				type: 'list',
				content: [
					'Algorithmic generation using mathematical principles',
					'Parametric design with variable inputs',
					'Interactive elements and user participation',
					'Exploration of visual synthesis techniques'
				]
			},
			{
				type: 'image',
				title: 'Visual Synthesis',
				content: {
					src: '/images/portfolio/projects/VisualSynth.jpg',
					alt: 'Visual synthesis artwork',
					caption: 'A piece exploring visual synthesis and algorithmic composition.'
				}
			},
			{
				type: 'text',
				content: 'Each piece starts with a mathematical concept or algorithm, which I then translate into visual form. The process often involves iteration and refinement, allowing the code to guide the artistic direction.'
			},
			{
				type: 'header',
				content: 'Technical Approach'
			},
			{
				type: 'list',
				content: [
					'Creative coding with various programming languages',
					'Mathematical modeling and algorithms',
					'Digital design tools and techniques',
					'Interactive media and user experience design'
				]
			}
		]}
	/>

	<ProjectModal
		projectId="webservers"
		title="Webservers and Sites"
		description="Home server setup and web development projects."
		images={[
			"/images/portfolio/projects/webservers/two_home_servers_in_service.jpg",
			"/images/portfolio/projects/webservers/first_home_server_being_set_up.jpg"
		]}
