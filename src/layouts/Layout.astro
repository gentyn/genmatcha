---
interface Props {
	title: string;
	theme?: 'default' | 'matcha';
}

const { title, theme = 'default' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Genny's World" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		{theme === 'matcha' ? (
			<>
				<header class="bg-gradient-to-r from-pink-200 via-white to-green-200 py-4 shadow-lg">
					<nav class="container mx-auto px-4">
						<div class="flex justify-between items-center">
							<a href="/" class="text-2xl font-cute text-pastel-green hover:text-pink-300 transition-colors">
								⋆˚✿˖° Genny's World °˖✿˚⋆
							</a>
							<div class="space-x-6">
								<a href="/" class="font-cute text-pastel-green hover:text-pink-300 transition-colors">Home</a>
								<a href="/matcha" class="font-cute text-pink-300 hover:text-pastel-green transition-colors">Matcha</a>
							</div>
						</div>
					</nav>
				</header>

				<slot />

				<footer class="bg-gradient-to-r from-pink-200 via-white to-green-200 py-6 shadow-lg">
					<div class="container mx-auto px-4 text-center">
						<p class="font-cute text-pastel-green">
							⋆˚✿˖° Made with love and matcha °˖✿˚⋆
						</p>
						<p class="text-sm text-gray-600 mt-2">
							© 2024 Genny's World
						</p>
					</div>
				</footer>
			</>
		) : (
			<>
				<nav class="fixed top-0 left-0 right-0 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800 z-50">
					<div class="container mx-auto px-4">
						<div class="flex justify-between items-center h-16">
							<a href="#home" class="text-xl font-bold text-gray-900 dark:text-white">Genesis Tyndall</a>
							<div class="hidden md:flex space-x-8">
								<a href="#home" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Home</a>
								<a href="#about" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">About</a>
								<a href="#projects" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Projects</a>
								<a href="#contact" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">Contact</a>
							</div>
							<button class="md:hidden text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">
								<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
								</svg>
							</button>
						</div>
					</div>
				</nav>

				<main class="pt-16">
					<slot />
				</main>

				<footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
					<div class="container mx-auto px-4 py-8">
						<div class="flex flex-col md:flex-row justify-between items-center">
							<div class="text-gray-600 dark:text-gray-400 mb-4 md:mb-0">
								© {new Date().getFullYear()} Genesis Tyndall. All rights reserved.
							</div>
							<div class="flex space-x-6">
								<a href="https://github.com/gentyn" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
									<span class="sr-only">GitHub</span>
									<svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
										<path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
									</svg>
								</a>
							</div>
						</div>
					</div>
				</footer>
			</>
		)}
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&display=swap');

	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
	}

	.font-cute {
		font-family: 'Cherry Bomb One', cursive;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
	}

	.text-pastel-green {
		color: #98D8AA;
	}

	/* Add hover animations for nav links */
	nav a {
		position: relative;
		transition: all 0.3s ease;
	}

	nav a:hover {
		transform: translateY(-2px);
	}

	nav a::after {
		content: '';
		position: absolute;
		width: 0;
		height: 2px;
		bottom: -2px;
		left: 0;
		background: linear-gradient(to right, #98D8AA, #FFB6C1);
		transition: width 0.3s ease;
	}

	nav a:hover::after {
		width: 100%;
	}
</style>