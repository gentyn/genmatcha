---
interface Props {
  title: string;
  theme?: 'default' | 'matcha';
}

const { title, theme = 'default' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={theme === 'matcha' ? '/matcha-favicon.svg' : '/favicon.svg'} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="GenMatcha" />
    <title>{title}</title>
  </head>
  <body class={theme === 'matcha' ? 'min-h-screen bg-gradient-to-br from-pink-200 via-white to-green-200 overflow-x-hidden' : 'min-h-screen bg-gray-50 dark:bg-gray-900 overflow-x-hidden'}>
    <!-- Navigation -->
    <header class={theme === 'matcha' ? 'bg-gradient-to-r from-green-100 via-white to-green-50 py-4 shadow-lg' : 'bg-blue-600 text-white py-4'}>
      <nav class="container mx-auto px-4">
        <div class="flex justify-between items-center">
          <a href="/" class={theme === 'matcha' ? 'text-lg sm:text-xl md:text-2xl font-cute text-pastel-green hover:text-pink-300 transition-colors whitespace-nowrap' : 'text-2xl font-bold hover:text-blue-200'}>
            {theme === 'matcha' ? '⋆˚✿˖° GenMatcha!! °˖✿˚⋆' : 'GenMatcha'}
          </a>
          <div class="space-x-2 sm:space-x-4 md:space-x-6">
            <a href="/" class={theme === 'matcha' ? 'text-sm sm:text-base md:text-lg font-cute text-pastel-green hover:text-pink-300 transition-colors whitespace-nowrap' : 'hover:text-blue-200'}>Home</a>
            <a href="/matcha" class={theme === 'matcha' ? 'text-sm sm:text-base md:text-lg font-cute text-pink-300 hover:text-pastel-green transition-colors whitespace-nowrap' : 'hover:text-blue-200'}>Matcha</a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class={theme === 'matcha' ? 'bg-gradient-to-r from-pink-100 via-white to-pink-200 py-3 shadow-lg' : 'bg-blue-600 text-white py-6'}>
      <div class="container mx-auto px-4 text-center">
        <p class={theme === 'matcha' ? 'font-cute text-pastel-green' : ''}>
          {theme === 'matcha' ? '⋆˚✿˖°  Thanks for sippin\' with me!!   °˖✿˚⋆' : ''}
        </p>
        <p class={theme === 'matcha' ? 'text-sm text-gray-600 mt-1' : 'text-sm text-blue-200 mt-2'}>
          © 2025 Genesis Tyndall
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  @import url('https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&display=swap');

  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
  }

  .font-cute {
    font-family: 'Cherry Bomb One', cursive;
  /* text-shadow: 
      3px 3px 0 rgba(255, 255, 255, 0.8),
      -3px -3px 0 rgba(255, 255, 255, 0.8),
      3px -3px 0 rgba(255, 255, 255, 0.8),
      -3px 3px 0 rgba(255, 255, 255, 0.8); */
  }

  .text-pastel-green {
    color: #98D8AA;
    text-shadow: 
      1px 1px 0 rgba(255, 255, 255, 0.8),
      -1px -1px 0 rgba(255, 255, 255, 0.8),
      1px -1px 0 rgba(255, 255, 255, 0.8),
      -1px 1px 0 rgba(255, 255, 255, 0.8);
  }

  /* Add hover animations for nav links */
  nav a {
    position: relative;
    transition: all 0.3s ease;
    text-shadow: 
      1px 1px 0 rgba(255, 255, 255, 0.8),
      -1px -1px 0 rgba(255, 255, 255, 0.8),
      1px -1px 0 rgba(255, 255, 255, 0.8),
      -1px 1px 0 rgba(255, 255, 255, 0.8);
  }

  nav a:hover {
    transform: translateY(-2px);
    text-shadow: 
      1px 1px 0 rgba(255, 255, 255, 0.9),
      -1px -1px 0 rgba(255, 255, 255, 0.9),
      1px -1px 0 rgba(255, 255, 255, 0.9),
      -1px 1px 0 rgba(255, 255, 255, 0.9);
  }

  nav a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -2px;
    left: 0;
    background: linear-gradient(to right, #98D8AA, #FFB6C1);
    transition: width 0.3s ease;
  }

  nav a:hover::after {
    width: 100%;
  }
</style> 